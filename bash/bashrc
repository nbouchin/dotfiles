# If not running interactively, do not do anything
set -o vi

UNAME=$(uname)

if [[ $UNAME == "Darwin" ]]; then
	export PATH=~/.brew/bin:$PATH
	alias ls='ls -G' 
	alias norminette='/usr/bin/ruby /usr/bin/norminette'
else
	alias ls='ls --color'
	shopt -s globstar
	# copy/paste
	alias pbcopy='xclip -selection clipboard'
	alias pbpaste='xclip -selection clipboard -o'
	alias open='xdg-open'
fi

if command -v tmux>/dev/null; then
	[[ ! $TERM =~ screen ]] && [ -z $TMUX ] && exec tmux -2
fi

bind -m vi-insert "\C-l":clear-screen

if [ -f /usr/share/bash-completion/bash_completion ]; then
	. /usr/share/bash-completion/bash_completion
fi

# colored man
export LESS_TERMCAP_mb=$'\E[1;31m'     # begin bold
export LESS_TERMCAP_md=$'\E[1;36m'     # begin blink
export LESS_TERMCAP_me=$'\E[0m'        # reset bold/blink
export LESS_TERMCAP_so=$'\E[01;44;33m' # begin reverse video
export LESS_TERMCAP_se=$'\E[0m'        # reset reverse video
export LESS_TERMCAP_us=$'\E[1;32m'     # begin underline
export LESS_TERMCAP_ue=$'\E[0m'        # reset underline
export GROFF_NO_SGR=1                  # for konsole and gnome-terminal
export EDITOR="vim"
export VISUAL="vim"
export TERM=xterm-256color

# ls aliases
alias ll='ls -l'
alias la='ls -a'
alias l='ls'

# systemctl aliases
alias ss='systemctl status'
alias lus='systemctl list-units --type=service'

# ps aliases
alias pssh='ps faux | grep sshd'
alias psftp='ps faux | grep ftp'

# reset shell
alias esl='exec $SHELL -l'

# emacs aliases
alias e='emacs -nw'
alias em='emacs'
alias ec='emacsclient -n'
alias reconnect='nordvpn disconnect && nordvpn connect'
